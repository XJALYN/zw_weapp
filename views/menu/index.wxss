.menu{
    width: 100vw;
    height: 50px;  
}
.menu-item--active{
    color:red;
}
.menu-item{
    
    text-align: center;
    height: 30px;
    transition: all ease-in 0.5s;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 20%;
    min-width: 20%;
    max-width: 25%;
}

.menu-item__line{
    width: 0;
    height: 8rpx;
    background-color: red;
    transition: ease-in all 0.1s;
}
.menu-item__line--active{
    width: 100%;
}